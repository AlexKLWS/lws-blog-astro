---
import routes from '../consts/routes'
import { Image } from 'astro:assets'
import profilePic from '../assets/images/square_1.jpg'

const getLinkStyle = (route: string) => {
  let currentRoute = Astro.url.pathname
  return route === currentRoute ? 'active-section-item' : 'section-item'
}
---

<header>
  <nav>
    <div class={'header-top-container'}>
      <a href={routes.home} class={'header-title'}> LONG WINTER SHADOWS </a>
      <div class={'header-right-container'}>
        <span class={'header-subtitle'}>Personal blog by</span>
        <a href={routes.contact} class={'header-subtitle-link'}> Alex Korzh </a>
        <a href={routes.contact} class={'header-portrait'}>
          <Image class={'portrait'} src={profilePic} alt='Alex Korzh Portrait' />
        </a>
      </div>
    </div>
    <!-- <div class={'dropdown-container'}>
      <Dropdown dropdownTriggerText={getDropdownLabel(router.pathname)} items={dropdownItems} />
    </div> -->
    <nav class={'section-list'}>
      <a href={routes.life} class={getLinkStyle(routes.life)}> Life </a>
      <a href={routes.code} class={getLinkStyle(routes.code)}> Code </a>
      <a href={routes.projects} class={getLinkStyle(routes.projects)}> Projects </a>
      <a href={routes.games} class={getLinkStyle(routes.games)}> Games </a>
    </nav>
  </nav>
</header>

<style lang='scss'>
  @import '../styles/global';

  .portrait {
    object-fit: contain;
    max-width: 100%;
    height: auto;
  }

  .header-title {
    @include normal-mono;
    font-weight: 1000;
    font-size: 28px;
    text-align: center;
    color: $primary-color;
    margin-top: 0.2rem;
    margin-left: 0.5rem;
    text-decoration: none;
    border-width: 1px;
    border-color: $white-color;
    border-style: solid;

    &:focus {
      border-color: $secondary-color;
      border-width: 1px;
      outline: none;
    }
  }

  .header-top-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: space-between;
    padding: 2.25rem 0px;
    border-bottom: $thin-black-color 1px solid;

    @media (min-width: $breakpoint-lg) {
      flex-direction: row;
    }
  }

  .header-right-container {
    display: flex;
    flex-direction: column;
    align-items: center;

    @media (min-width: $breakpoint-lg) {
      flex-direction: row;
    }
  }

  %header-subtitle-shared {
    @include normal-mono;
    font-weight: 300;
    font-size: 11px;
    text-align: center;
    color: $primary-color;
    margin-right: 0.5em;
    margin-top: 15px;

    @media (min-width: $breakpoint-lg) {
      flex-direction: row;
      margin-top: 0px;
    }
  }

  .header-subtitle {
    @extend %header-subtitle-shared;
  }

  .header-subtitle-link {
    @extend %header-subtitle-shared;
    margin-top: 5px;
    border-width: 1px;
    border-color: $white-color;
    border-style: solid;

    &:visited {
      color: $primary-color;
    }

    &:focus {
      border-color: $secondary-color;
      border-width: 1px;
      outline: none;
    }
    @media (min-width: $breakpoint-lg) {
      margin-top: 0px;
    }
  }

  .header-portrait {
    overflow: hidden;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    visibility: hidden;
    @media (min-width: $breakpoint-lg) {
      visibility: visible;
    }
  }

  .dropdown-container {
    padding-top: 0.75rem;
    margin-bottom: 2.25rem;
  }

  .section-list {
    display: flex;
    padding-top: 12px;
    justify-content: space-between;
    margin-bottom: 36px;

    @media (min-width: $breakpoint-lg) {
      justify-content: flex-start;
    }
  }

  %section-item-shared {
    @include button;
    font-size: 15px;
    border-width: 1px;
    border-color: $white-color;
    border-style: solid;

    &:focus {
      border-color: $secondary-color;
      border-width: 1px;
      outline: none;
    }

    @media (min-width: $breakpoint-lg) {
      font-size: 18px;
      line-height: 23px;
      margin-right: 4rem;
    }
  }

  .section-item {
    @extend %section-item-shared;
  }

  .active-section-item {
    @extend %section-item-shared;
    color: $white-color;
    background-color: $primary-color;

    &:hover {
      background-color: $primary-color;
    }
  }
</style>
