---
import routes from '../consts/routes'
---

<div class={'footer-container'}>
  <nav class={'footer-links-container'}>
    <a href={routes.home} class={'footer-item'}> Home </a>
    <a href={routes.life} class={'footer-item'}> Life </a>
    <a href={routes.code} class={'footer-item'}> Code </a>
    <a href={routes.guides} class={'footer-item'}> Guides </a>
    <a href={routes.projects} class={'footer-item'}> Projects </a>
    <a href={routes.games} class={'footer-item'}> Games </a>
    <a href={routes.contact} class={'footer-item'}> Contact </a>
  </nav>
  <span class={'footer-copyright-name'}>&copy; Alex Korzh</span>
</div>

<style lang='scss'>
  @import '../styles/config';
  @import '../styles/shared-mixins';

  .footer-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: $white-color;
  }

  .footer-links-container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
    margin-bottom: 21px;
    flex-direction: column;

    @media (min-width: $breakpoint-desktop-or-laptop) {
      flex-direction: row;
      width: 70%;
    }
  }

  .footer-item {
    @include button;
    font-size: 13px;
    border-width: 1px;
    border-color: $white-color;
    border-style: solid;

    &:focus {
      border-color: $secondary-color;
      border-width: 1px;
      outline: none;
    }

    @media (min-width: $breakpoint-desktop-or-laptop) {
      font-size: 16px;
      line-height: 21px;
    }
  }

  .footer-copyright-name {
    @include normal-mono;
    font-weight: 300;
    font-size: 11px;
    line-height: 25px;
    margin-bottom: 8px;
  }
</style>
